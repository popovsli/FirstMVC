@using ViewModel
@using FirstMVC.Utils.Extensions
@model UserDetailsViewModel

@{
    Layout = null;
}

@{
/* C# comment. */
// Another C# comment.
}
<!-- HTML comment -->

<!DOCTYPE html>

<html>
<head>

    @Scripts.Render("~/bundles/jqueryValidation")

    @*<script src="~/Scripts/jquery-1.12.4.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@

    <meta name="viewport" content="width=device-width" />
    <title>Authentication</title>
</head>
<body>
    <div>
        @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
        @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
        {

            @Html.LabelFor(c => c.UserName)
            @Html.TextBoxFor(x => x.UserName, new { @placeholder = "User name" })
            @Html.ValidationMessageFor(x => x.UserName)
            <br />

            @Html.LabelFor(c => c.Password)
            @Html.PasswordFor(x => x.Password, new { @placeholder = "Password" })
            <br />

            @Html.Submit("Login")
            @*<input type="submit" name="BtnSubmit" value="Login" />*@
        }

    </div>

</body>
</html>
